// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id      String  @id @default(uuid())
  name    String
  stripeCustomerId String?
  users   User[]
}

model User {
  id          String  @id @default(uuid())
  email       String   @unique
  firstName   String?
  lastName    String?
  company     Company
}